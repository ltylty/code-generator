<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://www.ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.enableets.edu.learning.framework.dao.ProblemReportScreenshotDao">
	<sql id="select_clause">
		select
			id as id,
			problem_report_id as problemReportId,
			file_id as fileId,
			file_name as fileName
			file_url as fileUrl,
		from 
			learning_problem_report_screenshot
	</sql>
	
	<sql id="where_clause">
		<where>
			<if test="problemReportId != null" >
					and problem_report_id = #{problemReportId}
			</if>
			<if test="fileId != null and fileId !=''" >
					and file_id = #{fileId}
			</if>
			<if test="fileName != null and fileName !=''" >
					and file_name = #{fileName}
			</if>
			<if test="fileUrl != null and fileUrl !=''" >
					and file_url = #{fileUrl}
			</if>
		</where>
	</sql>

</mapper>
