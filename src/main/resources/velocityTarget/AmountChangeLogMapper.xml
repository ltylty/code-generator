<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://www.ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.enableets.edu.billing.framework.dao.AmountChangeLogDao">
	<sql id="select_clause">
		select
			id as id,
			amount as amount,
			from_user_id as fromUserId,
			to_user_id as toUserId,
			pay_type as payType,
			description as description,
			create_time as createTime
			update_time as updateTime,
		from 
			billing_amount_change_log
	</sql>
	
	<sql id="where_clause">
		<where>
			<if test="amount != null" >
					and amount = #{amount}
			</if>
			<if test="fromUserId != null" >
					and from_user_id = #{fromUserId}
			</if>
			<if test="toUserId != null" >
					and to_user_id = #{toUserId}
			</if>
			<if test="payType != null" >
					and pay_type = #{payType}
			</if>
			<if test="description != null" >
					and description = #{description}
			</if>
			<if test="createTime != null" >
					and create_time = #{createTime}
			</if>
			<if test="updateTime != null" >
					and update_time = #{updateTime}
			</if>
		</where>
	</sql>

</mapper>
