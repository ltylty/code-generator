<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://www.ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.enableets.edu.notification.framework.dao.NotificationRecipientDao">
	<sql id="select_clause">
		select
			notification_id as notificationId,
			recipient as recipient,
			recipient_name as recipientName,
			status as status,
			read_time as readTime,
			create_time as createTime,
			update_time as updateTime
		from 
			notification_recipient
	</sql>
	
	<sql id="where_clause">
		<where>
			<if test="recipientName != null" >
					and recipient_name = #{recipientName}
			</if>
			<if test="status != null" >
					and status = #{status}
			</if>
			<if test="readTime != null" >
					and read_time = #{readTime}
			</if>
			<if test="createTime != null" >
					and create_time = #{createTime}
			</if>
			<if test="updateTime != null" >
					and update_time = #{updateTime}
			</if>
		</where>
	</sql>

</mapper>
