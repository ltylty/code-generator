<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://www.ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.enableets.edu.textbook.framework.dao.PublisherInfoDao">
	<sql id="select_clause">
		select
			publisher_id as publisherId,
			publisher_name as publisherName,
			creator as creator,
			create_time as createTime,
			updator as updator,
			update_time as updateTime
		from 
			publisher_info
	</sql>
	
	<sql id="where_clause">
		<where>
			<if test="publisherName != null" >
					and publisher_name = #{publisherName}
			</if>
			<if test="creator != null" >
					and creator = #{creator}
			</if>
			<if test="createTime != null" >
					and create_time = #{createTime}
			</if>
			<if test="updator != null" >
					and updator = #{updator}
			</if>
			<if test="updateTime != null" >
					and update_time = #{updateTime}
			</if>
		</where>
	</sql>

</mapper>
